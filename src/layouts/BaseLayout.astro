  de: { home: 'Startseite', calculators: 'Rechner', siteName: 'Rechner' },
  it: { home: 'Home', calculators: 'Calcolatrici', siteName: 'Calcolatrici' },
  pl: { home: 'Start', calculators: 'Kalkulatory', siteName: 'Kalkulatory' },
  nl: { home: 'Home', calculators: 'Rekenmachines', siteName: 'Rekenmachines' },
  tr: { home: 'Ana Sayfa', calculators: 'Hesap Makineleri', siteName: 'Hesap Makineleri' },
  sv: { home: 'Hem', calculators: 'Kalkylatorer', siteName: 'Kalkylatorer' },
  ru: { home: '–ì–ª–∞–≤–Ω–∞—è', calculators: '–ö–∞–ª—å–∫—É–ª—è—Ç–æ—Ä—ã', siteName: '–ö–∞–ª—å–∫—É–ª—è—Ç–æ—Ä—ã' },
};
const navText = navTranslations[lang as Locale] || navTranslations.es;

// JSON-LD structured data
const websiteSchema = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: navText.siteName,
  url: Astro.site,
  description: description,
  inLanguage: lang,
  potentialAction: {
    '@type': 'SearchAction',
    target: {
      '@type': 'EntryPoint',
      urlTemplate: `${Astro.site}?q={search_term_string}`
    },
    'query-input': 'required name=search_term_string'
  }
};

// JSON-LD for calculator pages
const calculatorSchema = isCalculatorPage ? {
  '@context': 'https://schema.org',
  '@type': ['WebApplication', 'SoftwareApplication'],
  name: title,
  url: canonicalURL,
  description: description,
  applicationCategory: 'UtilityApplication',
  operatingSystem: 'Any',
  offers: {
    '@type': 'Offer',
    price: '0',
    priceCurrency: 'USD'
  },
  inLanguage: lang,
  creator: {
    '@type': 'Organization',
    name: 'Calculatoria',
    url: Astro.site
  }
} : null;

// Breadcrumb schema for calculator pages
const breadcrumbSchema = isCalculatorPage && calculator ? {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: navText.home,
      item: new URL(homePath, Astro.site).toString()
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: navText.calculators,
      item: new URL(calculatorsPath, Astro.site).toString()
    },
    {
      '@type': 'ListItem',
      position: 3,
      name: title
    }
  ]
} : null;

// Combine all schemas
const structuredData = [websiteSchema, calculatorSchema, breadcrumbSchema].filter(Boolean);

// Default keywords by language if not provided
const defaultKeywordsByLang: Record<Locale, string> = {
  es: 'calculadora online, calculadora gratis, herramientas de c√°lculo, calculadora salud, calculadora IMC',
  en: 'online calculator, free calculator, calculation tools, health calculator, BMI calculator',
  pt: 'calculadora online, calculadora gr√°tis, ferramentas de c√°lculo, calculadora sa√∫de, calculadora IMC',
  fr: 'calculatrice en ligne, calculatrice gratuite, outils de calcul, calculatrice sant√©, calculatrice IMC',
  hi: '‡§ë‡§®‡§≤‡§æ‡§á‡§® ‡§ï‡•à‡§≤‡§ï‡•Å‡§≤‡•á‡§ü‡§∞, ‡§Æ‡•Å‡§´‡•ç‡§§ ‡§ï‡•à‡§≤‡§ï‡•Å‡§≤‡•á‡§ü‡§∞, ‡§ó‡§£‡§®‡§æ ‡§â‡§™‡§ï‡§∞‡§£, ‡§∏‡•ç‡§µ‡§æ‡§∏‡•ç‡§•‡•ç‡§Ø ‡§ï‡•à‡§≤‡§ï‡•Å‡§≤‡•á‡§ü‡§∞',
  de: 'Online-Rechner, kostenloser Rechner, Berechnungstools, Gesundheitsrechner, BMI-Rechner',
  it: 'calcolatrice online, calcolatrice gratuita, strumenti di calcolo, calcolatrice salute, calcolatrice IMC',
  pl: 'kalkulator online, darmowy kalkulator, narzƒôdzia obliczeniowe, kalkulator zdrowia, kalkulator BMI',
  nl: 'online rekenmachine, gratis rekenmachine, berekeningstools, gezondheidsrekenmachine, BMI rekenmachine',
  tr: 'online hesap makinesi, √ºcretsiz hesap makinesi, hesaplama ara√ßlarƒ±, saƒülƒ±k hesaplayƒ±cƒ±, BMI hesaplayƒ±cƒ±',
  sv: 'online kalkylator, gratis kalkylator, ber√§kningsverktyg, h√§lsokalkylator, BMI kalkylator',
  ru: '–æ–Ω–ª–∞–π–Ω –∫–∞–ª—å–∫—É–ª—è—Ç–æ—Ä, –±–µ—Å–ø–ª–∞—Ç–Ω—ã–π –∫–∞–ª—å–∫—É–ª—è—Ç–æ—Ä, –∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç—ã —Ä–∞—Å—á–µ—Ç–∞, –∫–∞–ª—å–∫—É–ª—è—Ç–æ—Ä –∑–¥–æ—Ä–æ–≤—å—è, –∫–∞–ª—å–∫—É–ª—è—Ç–æ—Ä –ò–ú–¢',
};

const finalKeywords = keywords || defaultKeywordsByLang[lang as Locale] || defaultKeywordsByLang.es;

// Get all alternate locales for OG
const alternateLocales = locales.filter(l => l !== lang).map(l => ogLocaleMap[l]);
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={finalKeywords} />
    <meta name="author" content="Calculatoria" />
    <meta http-equiv="content-language" content={lang} />

    <!-- Robots -->
    {noindex ? (
      <meta name="robots" content="noindex, nofollow" />
    ) : (
      <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    )}
    <meta name="msnbot" content="index, follow" />

    <!-- SEO Extras -->
    <link rel="canonical" href={canonicalURL} />
    <meta name="rating" content="general" />
    <meta name="revisit-after" content="7 days" />

    <!-- Dublin Core Metadata (Yandex) -->
    <meta name="DC.title" content={title} />
    <meta name="DC.creator" content="Calculatoria" />
    <meta name="DC.subject" content="calculadoras online" />
    <meta name="DC.description" content={description} />
    <meta name="DC.language" content={lang} />
    <meta name="DC.format" content="text/html" />

    <!-- Yandex Verification -->
    <meta name="yandex-verification" content="a430cf3e3bb73510" />

    <!-- Performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />

    <!-- Hreflang tags for all supported languages -->
    <link rel="alternate" hreflang="es" href={hreflangURLs.es} />
    <link rel="alternate" hreflang="en" href={hreflangURLs.en} />
    <link rel="alternate" hreflang="pt" href={hreflangURLs.pt} />
    <link rel="alternate" hreflang="fr" href={hreflangURLs.fr} />
    <link rel="alternate" hreflang="hi" href={hreflangURLs.hi} />
    <link rel="alternate" hreflang="de" href={hreflangURLs.de} />
    <link rel="alternate" hreflang="it" href={hreflangURLs.it} />
    <link rel="alternate" hreflang="pl" href={hreflangURLs.pl} />
    <link rel="alternate" hreflang="nl" href={hreflangURLs.nl} />
    <link rel="alternate" hreflang="tr" href={hreflangURLs.tr} />
    <link rel="alternate" hreflang="sv" href={hreflangURLs.sv} />
    <link rel="alternate" hreflang="ru" href={hreflangURLs.ru} />
    <link rel="alternate" hreflang="x-default" href={hreflangURLs.en} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:alt" content={title} />
    <meta property="og:locale" content={ogLocale} />
    {alternateLocales.map(locale => (
      <meta property="og:locale:alternate" content={locale} />
    ))}
    <meta property="og:site_name" content="Calculatoria" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:image:alt" content={title} />

    <!-- Favicon & Icons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/favicon.svg" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Mobile Optimization -->
    <meta name="theme-color" content="#388e3c" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="application-name" content="Calculatoria" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="Calculatoria" />
    <meta name="format-detection" content="telephone=no" />

    <!-- Structured Data (JSON-LD) -->
    {structuredData.map(schema => (
      <script type="application/ld+json" is:inline set:html={JSON.stringify(schema)} />
    ))}
  </head>
  <body class="min-h-screen flex flex-col bg-base-200">
    <!-- Skip to main content link for keyboard navigation -->
    <a href="#main-content" class="skip-link btn btn-primary fixed top-0 left-0 z-50 -translate-y-full focus:translate-y-0 transition-transform">
      Skip to main content
    </a>

    <header class="navbar bg-base-100 shadow-lg sticky top-0 z-40">
      <div class="navbar-start">
        <a href={homePath} class="btn btn-ghost text-xl gap-2" aria-label={`${navText.siteName} homepage`}>
          <span class="text-3xl" role="img" aria-label="Calculator icon">üßÆ</span>
          <span class="hidden sm:inline font-bold">{navText.siteName}</span>
        </a>
      </div>
      <div class="navbar-end gap-2">
        <a href={homePath} class="btn btn-ghost">
          {navText.home}
        </a>
        <a href={calculatorsPath} class="btn btn-ghost">
          {navText.calculators}
        </a>
      </div>
    </header>

    <main id="main-content" class="flex-1 container mx-auto px-4 py-8 max-w-7xl">
      <slot />
    </main>

    <footer class="footer footer-center bg-base-100 text-base-content p-10 border-t">
      <div class="flex flex-col items-center gap-6 w-full">
        <LanguageSelector
          currentPath={Astro.url.pathname}
          currentLang={lang as Locale}
          calculator={calculator}
        />
        <p class="text-sm">&copy; {new Date().getFullYear()} {navText.siteName} Online. All rights reserved.</p>
      </div>
    </footer>

    <style is:global>
      /* Screen reader only text (visually hidden) */
      .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
      }

      /* Reduced motion for users who prefer it */
      @media (prefers-reduced-motion: reduce) {
        *,
        *::before,
        *::after {
          animation-duration: 0.01ms !important;
          animation-iteration-count: 1 !important;
          transition-duration: 0.01ms !important;
          scroll-behavior: auto !important;
        }
      }

      /* Content styling for MDX */
      main h1 {
        @apply text-4xl font-bold mb-6 text-primary;
      }

      main h2 {
        @apply text-3xl font-bold mb-4 mt-8 text-secondary;
      }

      main h3 {
        @apply text-2xl font-semibold mb-3 mt-6;
      }

      main p {
        @apply mb-4 leading-relaxed;
      }

      main ul, main ol {
        @apply mb-4 ml-6 space-y-2;
      }

      main li {
        @apply leading-relaxed;
      }

      main strong {
        @apply font-semibold text-primary;
      }

      main a {
        @apply text-primary hover:text-primary-focus underline;
      }

      main hr {
        @apply my-8 border-base-300;
      }
    </style>
  </body>
</html>
