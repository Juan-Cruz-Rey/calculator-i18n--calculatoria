---
import { t, type Locale } from '@/utils/i18n';

const { lang } = Astro.props as { lang: Locale };
---

<div class="protein-calculator calculator">
  <div class="calculator-form">
    <h2>{t('protein:form.title', lang)}</h2>

    <form id="protein-form">
      <!-- Unit System Toggle -->
      <div class="form-group unit-toggle">
        <label>
          <input type="radio" name="unitSystem" value="metric" checked />
          {t('units.metric', lang)}
        </label>
        <label>
          <input type="radio" name="unitSystem" value="imperial" />
          {t('units.imperial', lang)}
        </label>
      </div>

      <!-- Weight -->
      <div class="form-group">
        <label for="weight">{t('protein:form.weightLabel', lang)}</label>
        <input
          type="number"
          id="weight"
          name="weight"
          min="10"
          max="500"
          step="0.1"
          required
          placeholder={t('protein:form.weightPlaceholder', lang)}
        />
        <span class="unit weight-unit">{t('units.kg', lang)}</span>
      </div>

      <!-- Activity Level -->
      <div class="form-group">
        <label for="activityLevel">{t('protein:form.activityLabel', lang)}</label>
        <select id="activityLevel" name="activityLevel" required>
          <option value="sedentary">{t('protein:form.activityLevels.sedentary', lang)}</option>
          <option value="light">{t('protein:form.activityLevels.light', lang)}</option>
          <option value="moderate" selected>{t('protein:form.activityLevels.moderate', lang)}</option>
          <option value="active">{t('protein:form.activityLevels.active', lang)}</option>
          <option value="very_active">{t('protein:form.activityLevels.veryActive', lang)}</option>
        </select>
      </div>

      <!-- Goal -->
      <div class="form-group">
        <label for="goal">{t('protein:form.goalLabel', lang)}</label>
        <select id="goal" name="goal" required>
          <option value="maintain" selected>{t('protein:form.goals.maintain', lang)}</option>
          <option value="lose">{t('protein:form.goals.lose', lang)}</option>
          <option value="gain">{t('protein:form.goals.gain', lang)}</option>
        </select>
      </div>

      <!-- Buttons -->
      <div class="form-actions">
        <button type="submit" class="btn-primary">{t('common.calculate', lang)}</button>
        <button type="reset" class="btn-secondary">{t('common.reset', lang)}</button>
      </div>
    </form>
  </div>

  <div class="calculator-results" id="results" style="display: none;" role="region" aria-live="polite" aria-atomic="true">
    <h2>{t('protein:results.title', lang)}</h2>

    <div class="result-card protein-value">
      <h3>{t('protein:results.dailyProtein', lang)}</h3>
      <p class="value" id="daily-protein">-</p>
      <p class="subtitle">{t('protein:results.gramsPerDay', lang)}</p>
    </div>

    <div class="result-grid">
      <div class="result-item">
        <strong>{t('protein:results.proteinPerKg', lang)}:</strong>
        <span id="protein-per-kg">-</span>
      </div>
      <div class="result-item">
        <strong>{t('protein:results.caloriesFromProtein', lang)}:</strong>
        <span id="calories-protein">-</span>
      </div>
      <div class="result-item">
        <strong>{t('protein:results.percentageOfDiet', lang)}:</strong>
        <span id="percentage-diet">-</span>
      </div>
    </div>
  </div>
</div>

<style>
  .protein-calculator {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
  }

  .calculator-form, .calculator-results, .calculator-info {
    background: white;
    border-radius: 8px;
    padding: 2rem;
    margin-bottom: 2rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  h2 {
    margin-top: 0;
    color: #333;
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
  }

  h3 {
    color: #555;
    font-size: 1.2rem;
    margin-top: 1.5rem;
    margin-bottom: 1rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: #555;
  }

  .form-group input[type="number"],
  .form-group select {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 1rem;
  }

  .form-group input[type="number"]:focus,
  .form-group select:focus {
    border-color: #10b981;
  }

  .unit {
    display: inline-block;
    margin-left: 0.5rem;
    color: #888;
    font-size: 0.9rem;
  }

  .unit-toggle {
    display: flex;
    gap: 1rem;
    padding: 1rem;
    background: #f5f5f5;
    border-radius: 4px;
  }

  .unit-toggle label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
    margin: 0;
  }

  .form-actions {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }

  .btn-primary, .btn-secondary {
    flex: 1;
    padding: 0.875rem;
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-primary {
    background: #10b981;
    color: white;
  }

  .btn-primary:hover {
    background: #059669;
  }

  .btn-secondary {
    background: #f5f5f5;
    color: #333;
  }

  .btn-secondary:hover {
    background: #e0e0e0;
  }

  .result-card {
    text-align: center;
    padding: 2rem;
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
    border-radius: 8px;
    margin-bottom: 2rem;
  }

  .result-card h3 {
    margin: 0 0 1rem 0;
    font-size: 1.2rem;
    color: white;
  }

  .result-card .value {
    font-size: 3rem;
    font-weight: bold;
    margin: 0;
  }

  .result-card .subtitle {
    font-size: 1.2rem;
    margin: 0.5rem 0 0 0;
    opacity: 0.9;
  }

  .result-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  .result-item {
    padding: 1rem;
    background: #f9f9f9;
    border-radius: 4px;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .result-item strong {
    color: #555;
    font-size: 0.9rem;
  }

  .result-item span {
    color: #333;
    font-size: 1.1rem;
    font-weight: 500;
  }

  .calculator-info {
    background: #f9f9f9;
  }

  .calculator-info p {
    margin-bottom: 1rem;
    line-height: 1.6;
    color: #555;
  }

  .calculator-info ul {
    margin: 1rem 0;
    padding-left: 2rem;
  }

  .calculator-info li {
    margin-bottom: 0.5rem;
    line-height: 1.6;
    color: #555;
  }

  .note {
    font-size: 0.9rem;
    font-style: italic;
    margin-top: 1.5rem;
    padding: 1rem;
    background: white;
    border-left: 4px solid #10b981;
  }
</style>

<script>
  // Import protein calculation utilities
  import type { ProteinInput, ProteinResult, UnitSystem, ActivityLevel, Goal } from '@/utils/calculators/protein';
  import { calculateProteinMetrics } from '@/utils/calculators/protein';

  const form = document.getElementById('protein-form') as HTMLFormElement;
  const results = document.getElementById('results') as HTMLDivElement;
  const unitSystemInputs = document.querySelectorAll('input[name="unitSystem"]');
  const weightUnit = document.querySelector('.weight-unit') as HTMLSpanElement;

  // Handle unit system change
  unitSystemInputs.forEach(input => {
    input.addEventListener('change', (e) => {
      const target = e.target as HTMLInputElement;
      const isMetric = target.value === 'metric';

      weightUnit.textContent = isMetric ? 'kg' : 'lbs';
    });
  });

  // Handle form submission
  form.addEventListener('submit', (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const unitSystem = formData.get('unitSystem') as UnitSystem;
    const weight = parseFloat(formData.get('weight') as string);
    const activityLevel = formData.get('activityLevel') as ActivityLevel;
    const goal = formData.get('goal') as Goal;

    const input: ProteinInput = {
      weight,
      activityLevel,
      goal,
      unitSystem,
    };

    try {
      const result = calculateProteinMetrics(input);
      displayResults(result);
    } catch (error) {
      alert('Error calculating protein requirements. Please check your inputs.');
      console.error(error);
    }
  });

  function displayResults(result: ProteinResult) {
    const dailyProtein = document.getElementById('daily-protein') as HTMLParagraphElement;
    const proteinPerKg = document.getElementById('protein-per-kg') as HTMLSpanElement;
    const caloriesProtein = document.getElementById('calories-protein') as HTMLSpanElement;
    const percentageDiet = document.getElementById('percentage-diet') as HTMLSpanElement;

    dailyProtein.textContent = `${result.dailyProtein}g`;
    proteinPerKg.textContent = `${result.proteinPerKg} g/kg`;
    caloriesProtein.textContent = `${result.caloriesFromProtein} kcal`;
    percentageDiet.textContent = `${result.percentageOfDiet}%`;

    // Show results
    results.style.display = 'block';
    results.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
  }

  // Handle form reset
  form.addEventListener('reset', () => {
    results.style.display = 'none';
  });
</script>
