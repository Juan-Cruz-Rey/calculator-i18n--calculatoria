        endomorph: 'Endomorfo - Tipo di Corpo Robusto'
      },
      infoDescriptions: {
        ectomorph: 'Gli ectomorfi tendono ad avere un metabolismo veloce, arti lunghi e magri, e difficoltà a guadagnare peso o muscoli.',
        mesomorph: 'I mesomorfi hanno una costituzione naturalmente atletica, guadagnano muscoli facilmente e hanno un metabolismo efficiente.',
        endomorph: 'Gli endomorfi hanno una struttura ossea più grande, tendono ad accumulare grasso più facilmente e possono aumentare di peso rapidamente.'
      },
      characteristics: {
        ectomorph: [
          'Metabolismo veloce',
          'Arti lunghi e magri',
          'Difficoltà a guadagnare peso',
          'Basso grasso corporeo',
          'Muscoli magri'
        ],
        mesomorph: [
          'Costituzione atletica naturale',
          'Guadagna muscoli facilmente',
          'Metabolismo efficiente',
          'Spalle larghe',
          'Vita stretta'
        ],
        endomorph: [
          'Struttura ossea più grande',
          'Aumenta di peso facilmente',
          'Metabolismo più lento',
          'Forma corporea arrotondata',
          'Percentuale di grasso corporeo più alta'
        ]
      }
    }
  };

  // Get translations for current language
  const t = translations[currentLang] || translations.es;

  // Handle unit system change
  unitSystemInputs.forEach(input => {
    input.addEventListener('change', (e) => {
      const target = e.target as HTMLInputElement;
      const isMetric = target.value === 'metric';

      heightMetric.style.display = isMetric ? 'block' : 'none';
      heightImperial.style.display = isMetric ? 'none' : 'block';

      const heightInput = document.getElementById('height') as HTMLInputElement;
      const heightIn = document.getElementById('heightIn') as HTMLInputElement;

      if (isMetric) {
        heightInput.required = true;
        heightIn.required = false;
        wristUnit.textContent = 'cm';
        ankleUnit.textContent = 'cm';
      } else {
        heightInput.required = false;
        heightIn.required = true;
        wristUnit.textContent = 'in';
        ankleUnit.textContent = 'in';
      }
    });
  });

  // Handle form submission
  form.addEventListener('submit', (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const unitSystem = formData.get('unitSystem') as UnitSystem;
    const gender = formData.get('gender') as Gender;
    const wrist = parseFloat(formData.get('wrist') as string);
    const ankle = parseFloat(formData.get('ankle') as string);

    let height: number;

    if (unitSystem === 'metric') {
      height = parseFloat(formData.get('height') as string);
    } else {
      height = parseFloat(formData.get('heightIn') as string);
    }

    const input: BodyTypeInput = {
      gender,
      height,
      wristCircumference: wrist,
      ankleCircumference: ankle,
      unitSystem,
    };

    try {
      const result = calculateBodyTypeMetrics(input);
      displayResults(result);
    } catch (error) {
      alert('Error calculating body type. Please check your inputs.');
      console.error(error);
    }
  });

  function displayResults(result: BodyTypeResult) {
    const bodytypeValue = document.getElementById('bodytype-value') as HTMLParagraphElement;
    const bodytypeDescription = document.getElementById('bodytype-description') as HTMLParagraphElement;
    const frameSize = document.getElementById('frame-size') as HTMLSpanElement;
    const wristRatio = document.getElementById('wrist-ratio') as HTMLSpanElement;
    const ankleRatio = document.getElementById('ankle-ratio') as HTMLSpanElement;
    const resultCard = document.querySelector('.result-card') as HTMLDivElement;
    const infoTitle = document.getElementById('info-title') as HTMLHeadingElement;
    const infoDescription = document.getElementById('info-description') as HTMLParagraphElement;
    const characteristicsList = document.getElementById('characteristics-list') as HTMLUListElement;

    // Display main results
    bodytypeValue.textContent = t.bodyTypes[result.bodyType];
    bodytypeDescription.textContent = t.descriptions[result.bodyType];
    frameSize.textContent = t.frameSizes[result.frameSize];
    wristRatio.textContent = result.wristToHeightRatio.toString();
    ankleRatio.textContent = result.ankleToHeightRatio.toString();

    // Update result card color based on body type
    resultCard.className = `result-card type-${result.bodyType}`;

    // Display body type information
    infoTitle.textContent = t.infoTitles[result.bodyType];
    infoDescription.textContent = t.infoDescriptions[result.bodyType];

    // Display characteristics
    characteristicsList.innerHTML = '';
    t.characteristics[result.bodyType].forEach((characteristic: string) => {
      const li = document.createElement('li');
      li.textContent = characteristic;
      characteristicsList.appendChild(li);
    });

    // Show results
    results.style.display = 'block';
    results.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
  }

  // Handle form reset
  form.addEventListener('reset', () => {
    results.style.display = 'none';
  });
</script>
