    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    color: white;
    border-radius: 8px;
    margin-bottom: 2rem;
  }

  .result-card h3 {
    margin: 0 0 1rem 0;
    font-size: 1.2rem;
  }

  .result-card .value {
    font-size: 2.5rem;
    font-weight: bold;
    margin: 0;
    text-transform: capitalize;
  }

  .result-card .category {
    font-size: 1.1rem;
    margin: 0.5rem 0 0 0;
    opacity: 0.9;
  }

  .result-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .result-item {
    padding: 1rem;
    background: #f9f9f9;
    border-radius: 4px;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .result-item strong {
    color: #555;
    font-size: 0.9rem;
  }

  .result-item span {
    color: #333;
    font-size: 1.1rem;
    font-weight: 500;
  }

  .body-type-info {
    background: #faf5ff;
    border-left: 4px solid #6366f1;
    padding: 1.5rem;
    border-radius: 4px;
  }

  .body-type-info h3 {
    margin-top: 0;
    color: #6366f1;
    font-size: 1.3rem;
  }

  .body-type-info p {
    line-height: 1.6;
    color: #555;
  }

  .characteristics {
    margin-top: 1.5rem;
  }

