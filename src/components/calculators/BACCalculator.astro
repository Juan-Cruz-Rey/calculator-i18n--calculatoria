---
import { t, type Locale } from '@utils/i18n';

interface Props {
  lang: Locale;
}

const { lang } = Astro.props;
---

<div class="calculator-container">
  <div class="calculator-card">
    <h2>{t('bac.title', lang)}</h2>

    <!-- Strong Disclaimer -->
    <div class="disclaimer-box">
      <strong>⚠️ {t('bac.disclaimer.title', lang)}</strong>
      <p>{t('bac.disclaimer.text', lang)}</p>
    </div>

    <form id="bac-form">
      <!-- Weight Input -->
      <div class="form-group">
        <label for="weight">{t('bac.weight.label', lang)}</label>
        <div class="input-with-unit">
          <input
            type="number"
            id="weight"
            name="weight"
            min="0"
            step="0.1"
            required
          />
          <select id="weight-unit" name="weightUnit">
            <option value="kg">{t('bac.units.kg', lang)}</option>
            <option value="lb">{t('bac.units.lb', lang)}</option>
          </select>
        </div>
      </div>

      <!-- Gender Selection -->
      <div class="form-group">
        <label>{t('bac.gender.label', lang)}</label>
        <div class="radio-group">
          <label class="radio-label">
            <input type="radio" name="gender" value="male" checked />
            <span>{t('bac.gender.male', lang)}</span>
          </label>
          <label class="radio-label">
            <input type="radio" name="gender" value="female" />
            <span>{t('bac.gender.female', lang)}</span>
          </label>
        </div>
      </div>

      <!-- Drink Type Selection -->
      <div class="form-group">
        <label for="drink-type">{t('bac.drinkType.label', lang)}</label>
        <select id="drink-type" name="drinkType">
          <option value="beer">{t('bac.drinkType.beer', lang)}</option>
          <option value="wine">{t('bac.drinkType.wine', lang)}</option>
          <option value="liquor">{t('bac.drinkType.liquor', lang)}</option>
          <option value="custom">{t('bac.drinkType.custom', lang)}</option>
        </select>
      </div>

      <!-- Custom Drink Settings (hidden by default) -->
      <div id="custom-drink-settings" class="custom-settings" style="display: none;">
        <div class="form-group">
          <label for="drink-volume">{t('bac.drinkVolume.label', lang)}</label>
          <div class="input-with-unit">
            <input
              type="number"
              id="drink-volume"
              name="drinkVolume"
              min="0"
              step="0.1"
            />
            <select id="volume-unit" name="volumeUnit">
              <option value="oz">{t('bac.units.oz', lang)}</option>
              <option value="ml">{t('bac.units.ml', lang)}</option>
            </select>
          </div>
        </div>

        <div class="form-group">
          <label for="alcohol-content">{t('bac.alcoholContent.label', lang)}</label>
          <div class="input-with-unit">
            <input
              type="number"
              id="alcohol-content"
              name="alcoholContent"
              min="0"
              max="100"
              step="0.1"
            />
            <span class="unit-text">%</span>
          </div>
        </div>
      </div>

      <!-- Number of Drinks -->
      <div class="form-group">
        <label for="drinks">{t('bac.drinks.label', lang)}</label>
        <input
          type="number"
          id="drinks"
          name="drinks"
          min="1"
          step="1"
          value="1"
          required
        />
      </div>

      <!-- Hours Drinking -->
      <div class="form-group">
        <label for="hours">{t('bac.hours.label', lang)}</label>
        <input
          type="number"
          id="hours"
          name="hours"
          min="0"
          step="0.5"
          value="1"
          required
        />
      </div>

      <button type="submit" class="calculate-btn">
        {t('calculate', lang)}
      </button>
    </form>

    <!-- Results Section -->
    <div id="results" class="results" style="display: none;">
      <h3>{t('bac.results.title', lang)}</h3>

      <div class="result-grid">
        <div class="result-item highlight">
          <span class="result-label">{t('bac.results.bac', lang)}</span>
          <span class="result-value" id="bac-value">-</span>
        </div>

        <div class="result-item">
          <span class="result-label">{t('bac.results.impairmentLevel', lang)}</span>
          <span class="result-value" id="impairment-level">-</span>
        </div>

        <div class="result-item">
          <span class="result-label">{t('bac.results.timeUntilSober', lang)}</span>
          <span class="result-value" id="time-sober">-</span>
        </div>

        <div class="result-item">
          <span class="result-label">{t('bac.results.legalStatus', lang)}</span>
          <span class="result-value" id="legal-status">-</span>
        </div>
      </div>

      <div id="warnings" class="warnings"></div>

      <div class="result-description">
        <h4>{t('bac.results.descriptionTitle', lang)}</h4>
        <p id="impairment-description">-</p>
      </div>

      <!-- Legal Disclaimer -->
      <div class="legal-disclaimer">
        <p><strong>{t('bac.legalDisclaimer.title', lang)}</strong></p>
        <p>{t('bac.legalDisclaimer.text', lang)}</p>
      </div>
    </div>
  </div>

  <!-- Information Section -->
  <div class="info-section">
    <h3>{t('bac.info.title', lang)}</h3>
    <p>{t('bac.info.description', lang)}</p>

    <h4>{t('bac.info.howItWorks', lang)}</h4>
    <p>{t('bac.info.formula', lang)}</p>

    <h4>{t('bac.info.impairmentLevelsTitle', lang)}</h4>
    <ul>
      <li><strong>0.00-0.02%:</strong> {t('bac.info.levels.minimal', lang)}</li>
      <li><strong>0.03-0.05%:</strong> {t('bac.info.levels.mild', lang)}</li>
      <li><strong>0.06-0.09%:</strong> {t('bac.info.levels.moderate', lang)}</li>
      <li><strong>0.10-0.15%:</strong> {t('bac.info.levels.significant', lang)}</li>
      <li><strong>0.16%+:</strong> {t('bac.info.levels.severe', lang)}</li>
    </ul>

    <h4>{t('bac.info.factorsTitle', lang)}</h4>
    <ul>
      <li>{t('bac.info.factors.weight', lang)}</li>
      <li>{t('bac.info.factors.gender', lang)}</li>
      <li>{t('bac.info.factors.time', lang)}</li>
      <li>{t('bac.info.factors.food', lang)}</li>
      <li>{t('bac.info.factors.metabolism', lang)}</li>
    </ul>
  </div>
</div>

<style>
  .calculator-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    display: grid;
    gap: 2rem;
    grid-template-columns: 1fr;
  }

  @media (min-width: 768px) {
    .calculator-container {
      grid-template-columns: 1fr 1fr;
    }
  }

  .calculator-card {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .disclaimer-box {
    background: #fff3cd;
    border: 2px solid #ffc107;
    border-radius: 8px;
    padding: 1rem;
    margin-bottom: 1.5rem;
  }

  .disclaimer-box strong {
    color: #856404;
    display: block;
    margin-bottom: 0.5rem;
  }

  .disclaimer-box p {
    color: #856404;
    margin: 0;
    font-size: 0.9rem;
  }

  h2 {
    color: #2c3e50;
    margin-bottom: 1.5rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  label {
    display: block;
    margin-bottom: 0.5rem;
    color: #2c3e50;
    font-weight: 500;
  }

  input[type="number"],
  select {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 1rem;
  }

  .input-with-unit {
    display: flex;
    gap: 0.5rem;
  }

  .input-with-unit input {
    flex: 1;
  }

  .input-with-unit select {
    width: auto;
    min-width: 80px;
  }

  .unit-text {
    display: flex;
    align-items: center;
    padding: 0 0.75rem;
    background: #f8f9fa;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-weight: 500;
  }

  .radio-group {
    display: flex;
    gap: 1rem;
  }

  .radio-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
    font-weight: normal;
  }

  .radio-label input[type="radio"] {
    width: auto;
  }

  .custom-settings {
    background: #f8f9fa;
    padding: 1rem;
    border-radius: 4px;
    margin-bottom: 1rem;
  }

  .calculate-btn {
    width: 100%;
    padding: 1rem;
    background: #3498db;
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.3s;
  }

  .calculate-btn:hover {
    background: #2980b9;
  }

  .results {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 2px solid #eee;
  }

  .results h3 {
    color: #2c3e50;
    margin-bottom: 1rem;
  }

  .result-grid {
    display: grid;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .result-item {
    background: #f8f9fa;
    padding: 1rem;
    border-radius: 4px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .result-item.highlight {
    background: #e3f2fd;
    border: 2px solid #3498db;
  }

  .result-label {
    font-weight: 500;
    color: #2c3e50;
  }

  .result-value {
    font-size: 1.25rem;
    font-weight: 700;
    color: #3498db;
  }

  .warnings {
    margin: 1.5rem 0;
  }

  .warning-item {
    background: #f8d7da;
    border: 1px solid #f5c6cb;
    color: #721c24;
    padding: 0.75rem;
    border-radius: 4px;
    margin-bottom: 0.5rem;
  }

  .result-description {
    background: #f8f9fa;
    padding: 1rem;
    border-radius: 4px;
    margin: 1rem 0;
  }

  .result-description h4 {
    color: #2c3e50;
    margin-bottom: 0.5rem;
  }

  .legal-disclaimer {
    background: #fff3cd;
    border: 2px solid #ffc107;
    border-radius: 8px;
    padding: 1rem;
    margin-top: 1.5rem;
  }

  .legal-disclaimer p {
    color: #856404;
    margin: 0.5rem 0;
    font-size: 0.9rem;
  }

  .info-section {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .info-section h3 {
    color: #2c3e50;
    margin-bottom: 1rem;
  }

  .info-section h4 {
    color: #2c3e50;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .info-section ul {
    margin-left: 1.5rem;
    line-height: 1.8;
  }

  .info-section p {
    line-height: 1.8;
    color: #555;
  }
</style>

<script>
  import { calculateBAC, DRINK_PRESETS } from '@utils/calculators/bac';

  const form = document.getElementById('bac-form') as HTMLFormElement;
  const drinkTypeSelect = document.getElementById('drink-type') as HTMLSelectElement;
  const customSettings = document.getElementById('custom-drink-settings') as HTMLDivElement;
  const drinkVolumeInput = document.getElementById('drink-volume') as HTMLInputElement;
  const alcoholContentInput = document.getElementById('alcohol-content') as HTMLInputElement;
  const resultsDiv = document.getElementById('results') as HTMLDivElement;

  // Handle drink type selection
  drinkTypeSelect.addEventListener('change', () => {
    const drinkType = drinkTypeSelect.value as keyof typeof DRINK_PRESETS;

    if (drinkType === 'custom') {
      customSettings.style.display = 'block';
      drinkVolumeInput.required = true;
      alcoholContentInput.required = true;
    } else {
      customSettings.style.display = 'none';
      drinkVolumeInput.required = false;
      alcoholContentInput.required = false;

      // Set preset values
      const preset = DRINK_PRESETS[drinkType];
      drinkVolumeInput.value = preset.volume.toString();
      alcoholContentInput.value = preset.alcoholContent.toString();
      (document.getElementById('volume-unit') as HTMLSelectElement).value = preset.volumeUnit;
    }
  });

  // Initialize with beer preset
  const beerPreset = DRINK_PRESETS.beer;
  drinkVolumeInput.value = beerPreset.volume.toString();
  alcoholContentInput.value = beerPreset.alcoholContent.toString();

  form.addEventListener('submit', (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const weight = parseFloat(formData.get('weight') as string);
    const weightUnit = formData.get('weightUnit') as 'kg' | 'lb';
    const gender = formData.get('gender') as 'male' | 'female';
    const drinks = parseFloat(formData.get('drinks') as string);
    const drinkVolume = parseFloat(drinkVolumeInput.value);
    const volumeUnit = formData.get('volumeUnit') as 'ml' | 'oz';
    const alcoholContent = parseFloat(alcoholContentInput.value);
    const hoursDrinking = parseFloat(formData.get('hours') as string);

    const result = calculateBAC({
      weight,
      weightUnit,
      gender,
      drinks,
      drinkVolume,
      volumeUnit,
      alcoholContent,
      hoursDrinking,
    });

    // Display results
    (document.getElementById('bac-value') as HTMLElement).textContent = result.bacFormatted;
    (document.getElementById('impairment-level') as HTMLElement).textContent =
      result.impairmentLevel.charAt(0).toUpperCase() + result.impairmentLevel.slice(1);
    (document.getElementById('time-sober') as HTMLElement).textContent =
      `${result.timeUntilSober} hours`;
    (document.getElementById('legal-status') as HTMLElement).textContent =
      result.isOverLegalLimit ? 'Over legal limit' : 'Below legal limit';
    (document.getElementById('impairment-description') as HTMLElement).textContent =
      result.impairmentDescription;

    // Display warnings
    const warningsDiv = document.getElementById('warnings') as HTMLDivElement;
    warningsDiv.innerHTML = '';
    result.warnings.forEach(warning => {
      const warningEl = document.createElement('div');
      warningEl.className = 'warning-item';
      warningEl.textContent = `⚠️ ${warning}`;
      warningsDiv.appendChild(warningEl);
    });

    // Color code BAC value
    const bacValueEl = document.getElementById('bac-value') as HTMLElement;
    if (result.bac > 0.15) {
      bacValueEl.style.color = '#e74c3c';
    } else if (result.bac > 0.08) {
      bacValueEl.style.color = '#e67e22';
    } else if (result.bac > 0.05) {
      bacValueEl.style.color = '#f39c12';
    } else {
      bacValueEl.style.color = '#27ae60';
    }

    resultsDiv.style.display = 'block';
    resultsDiv.scrollIntoView({ behavior: 'smooth' });
  });
</script>
