---
import BaseLayout from '@/layouts/BaseLayout.astro';
import DueDateCalculator from '@/components/calculators/DueDateCalculator.astro';
import { t } from '@/utils/i18n';

const title = t('due-date.title', 'ru') + ' - ' + t('site.title', 'ru');
const description = t('due-date.metaDescription', 'ru');
---

<BaseLayout title={title} description={description} lang="ru" calculator="due-date">
  <div class="container">
    <div class="page-header">
      <h1>{t('due-date.title', 'ru')}</h1>
      <p class="page-description">{t('due-date.description', 'ru')}</p>
    </div>

    <DueDateCalculator lang="ru" />
  </div>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    padding: 2rem 0 1rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    color: #333;
    margin-bottom: 0.5rem;
  }

  .page-description {
    font-size: 1.25rem;
    color: #666;
  }
</style>
