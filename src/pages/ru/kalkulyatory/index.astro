---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { t } from '@/utils/i18n';

const title = '–í—Å–µ –∫–∞–ª—å–∫—É–ª—è—Ç–æ—Ä—ã - ' + t('site.title', 'ru');
const description = '–û—Ç–∫—Ä–æ–π—Ç–µ –¥–ª—è —Å–µ–±—è –Ω–∞—à—É –ø–æ–ª–Ω—É—é –∫–æ–ª–ª–µ–∫—Ü–∏—é –±–µ—Å–ø–ª–∞—Ç–Ω—ã—Ö –∫–∞–ª—å–∫—É–ª—è—Ç–æ—Ä–æ–≤, –æ—Ä–≥–∞–Ω–∏–∑–æ–≤–∞–Ω–Ω—ã—Ö –ø–æ –∫–∞—Ç–µ–≥–æ—Ä–∏—è–º.';

const calculatorsByCategory = {
  health: [
    {
      title: t('sleep.title', 'ru'),
      description: t('sleep.description', 'ru'),
      url: '/ru/kalkulyatory/son/',
      icon: 'üò¥',
    },
  ],
  other: [
    {
      title: t('tip.title', 'ru'),
      description: t('tip.description', 'ru'),
      url: '/ru/kalkulyatory/chaevye/',
      icon: 'üí∞',
    },
  ],
  financial: [],
  math: [],
};
---

<BaseLayout title={title} description={description} lang="ru">
  <div class="container">
    <div class="page-header">
      <h1>–í—Å–µ –∫–∞–ª—å–∫—É–ª—è—Ç–æ—Ä—ã</h1>
      <p class="page-description">{description}</p>
    </div>

    {Object.entries(calculatorsByCategory).map(([category, calculators]) => (
      calculators.length > 0 && (
        <section class="category-section">
          <h2>{t(`categories.${category}`, 'ru')}</h2>
          <div class="calculator-grid">
            {calculators.map((calc) => (
              <a href={calc.url} class="calculator-card">
                <div class="calculator-icon">{calc.icon}</div>
                <h3>{calc.title}</h3>
                <p>{calc.description}</p>
              </a>
            ))}
          </div>
        </section>
      )
    ))}
  </div>

  <style>
    .page-header {
      text-align: center;
      padding: 2rem 0 3rem;
    }

    .page-header h1 {
      font-size: 2.5rem;
      color: #333;
      margin-bottom: 0.5rem;
    }

    .page-description {
      font-size: 1.25rem;
      color: #666;
    }

    .category-section {
      margin-bottom: 3rem;
    }

    .category-section h2 {
      font-size: 1.75rem;
      color: #333;
      margin-bottom: 1.5rem;
      padding-bottom: 0.5rem;
      border-bottom: 2px solid #4CAF50;
    }

    .calculator-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 1.5rem;
    }

    .calculator-card {
      background: white;
      padding: 1.5rem;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      text-decoration: none;
      color: inherit;
      transition: transform 0.2s, box-shadow 0.2s;
      display: flex;
      flex-direction: column;
    }

    .calculator-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 4px 16px rgba(0,0,0,0.15);
    }

    .calculator-icon {
      font-size: 2.5rem;
      margin-bottom: 0.75rem;
    }

    .calculator-card h3 {
      font-size: 1.25rem;
      margin-bottom: 0.5rem;
      color: #333;
    }

    .calculator-card p {
      color: #666;
      font-size: 0.95rem;
    }

    @media (max-width: 768px) {
      .calculator-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</BaseLayout>
