---
import BaseLayout from '@/layouts/BaseLayout.astro';
import BodyFatCalculator from '@/components/calculators/BodyFatCalculator.astro';
import { t } from '@/utils/i18n';

const title = t('body-fat.title', 'ru') + ' - ' + t('site.title', 'ru');
const description = t('body-fat.metaDescription', 'ru');
---

<BaseLayout title={title} description={description} lang="ru" calculator="body-fat">
  <div class="container">
    <div class="page-header">
      <h1>{t('body-fat.title', 'ru')}</h1>
      <p class="page-description">{t('body-fat.description', 'ru')}</p>
    </div>

    <BodyFatCalculator lang="ru" />
  </div>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    padding: 2rem 0 1rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    color: #333;
    margin-bottom: 0.5rem;
  }

  .page-description {
    font-size: 1.25rem;
    color: #666;
  }
</style>
