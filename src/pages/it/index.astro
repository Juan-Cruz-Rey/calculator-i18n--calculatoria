  { title: t('carbohydrate.title', 'it'), description: t('carbohydrate.description', 'it'), url: '/it/calculators/carbohydrate/', category: t('categories.health', 'it'), icon: 'üçû' },
  { title: t('leanBodyMass.title', 'it'), description: t('leanBodyMass.description', 'it'), url: '/it/calculators/lean-body-mass/', category: t('categories.health', 'it'), icon: 'üí™' },
