---
import BaseLayout from '@/layouts/BaseLayout.astro';
import DateCalculator from '@/components/calculators/DateCalculator.astro';
import { t } from '@/utils/i18n';

const title = t('date.title', 'it') + ' - ' + t('site.title', 'it');
const description = t('date.metaDescription', 'it');
---

<BaseLayout title={title} description={description} lang="it" calculator="date">
  <div class="container">
    <div class="page-header">
      <h1>{t('date.title', 'it')}</h1>
      <p class="page-description">{t('date.description', 'it')}</p>
    </div>

    <DateCalculator lang="it" />
  </div>

  <style>
    .page-header {
      text-align: center;
      padding: 2rem 0;
    }

    .page-header h1 {
      font-size: 2.5rem;
      color: #333;
      margin-bottom: 0.5rem;
    }

    .page-description {
      font-size: 1.25rem;
      color: #666;
    }
  </style>
</BaseLayout>
