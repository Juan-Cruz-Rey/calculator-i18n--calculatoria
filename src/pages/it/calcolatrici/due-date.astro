---
import BaseLayout from '@/layouts/BaseLayout.astro';
import DueDateCalculator from '@/components/calculators/DueDateCalculator.astro';
import { t } from '@/utils/i18n';

const title = t('dueDate:title', 'it') + ' - ' + t('site.title', 'it');
const description = t('dueDate:metaDescription', 'it');
---

<BaseLayout title={title} description={description} lang="it" calculator="dueDate">
  <div class="container">
    <div class="page-header">
      <h1>{t('dueDate:title', 'it')}</h1>
      <p class="page-description">{t('dueDate:description', 'it')}</p>
    </div>

    <DueDateCalculator lang="it" />
  </div>

  <style>
    .page-header {
      text-align: center;
      padding: 2rem 0;
    }

    .page-header h1 {
      font-size: 2.5rem;
      color: #333;
      margin-bottom: 0.5rem;
    }

    .page-description {
      font-size: 1.25rem;
      color: #666;
    }
  </style>
</BaseLayout>
