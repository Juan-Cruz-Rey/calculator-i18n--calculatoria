---
import BaseLayout from '@/layouts/BaseLayout.astro';
import TipCalculator from '@/components/calculators/TipCalculator.astro';
import { t } from '@/utils/i18n';

const title = t('tip.title', 'sv') + ' - ' + t('site.title', 'sv');
const description = t('tip.metaDescription', 'sv');
---

<BaseLayout title={title} description={description} lang="sv" calculator="tip">
  <div class="container">
    <div class="page-header">
      <h1>{t('tip.title', 'sv')}</h1>
      <p class="page-description">{t('tip.description', 'sv')}</p>
    </div>

    <TipCalculator lang="sv" />
  </div>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    padding: 2rem 0 1rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    color: #333;
    margin-bottom: 0.5rem;
  }

  .page-description {
    font-size: 1.25rem;
    color: #666;
  }
</style>
