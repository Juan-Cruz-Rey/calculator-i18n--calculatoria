---
import BaseLayout from '@/layouts/BaseLayout.astro';
import BMRCalculator from '@/components/calculators/BMRCalculator.astro';
import { t } from '@/utils/i18n';

const title = t('bmr.title', 'de') + ' - ' + t('site.title', 'de');
const description = t('bmr.metaDescription', 'de');
---

<BaseLayout title={title} description={description} lang="de" calculator="bmr">
  <div class="container">
    <div class="page-header">
      <h1>{t('bmr.title', 'de')}</h1>
      <p class="page-description">{t('bmr.description', 'de')}</p>
    </div>

    <BMRCalculator lang="de" />
  </div>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    padding: 2rem 0 1rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    color: #333;
    margin-bottom: 0.5rem;
  }

  .page-description {
    font-size: 1.25rem;
    color: #666;
  }
</style>
