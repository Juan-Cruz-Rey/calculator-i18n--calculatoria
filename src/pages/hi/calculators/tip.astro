---
import BaseLayout from '@/layouts/BaseLayout.astro';
import TipCalculator from '@/components/calculators/TipCalculator.astro';
import { t } from '@/utils/i18n';

const title = t('tip.title', 'hi') + ' - ' + t('site.title', 'hi');
const description = t('tip.metaDescription', 'hi');
---

<BaseLayout title={title} description={description} lang="hi" calculator="tip">
  <div class="container">
    <div class="page-header">
      <h1>{t('tip.title', 'hi')}</h1>
      <p class="page-description">{t('tip.description', 'hi')}</p>
    </div>

    <TipCalculator lang="hi" />
  </div>

  <style>
    .page-header {
      text-align: center;
      padding: 2rem 0;
    }

    .page-header h1 {
      font-size: 2.5rem;
      color: #333;
      margin-bottom: 0.5rem;
    }

    .page-description {
      font-size: 1.25rem;
      color: #666;
    }
  </style>
</BaseLayout>
