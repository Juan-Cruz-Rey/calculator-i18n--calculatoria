---
import BaseLayout from '@/layouts/BaseLayout.astro';
import PeriodCalculator from '@/components/calculators/PeriodCalculator.astro';
import { t } from '@/utils/i18n';

const title = t('period:title', 'en') + ' - ' + t('site.title', 'en');
const description = t('period:metaDescription', 'en');
---

<BaseLayout title={title} description={description} lang="en">
  <div class="container">
    <div class="page-header">
      <h1>{t('period:title', 'en')}</h1>
      <p class="page-description">{t('period:description', 'en')}</p>
    </div>

    <PeriodCalculator lang="en" />
  </div>

  <style>
    .page-header {
      text-align: center;
      padding: 2rem 0;
    }

    .page-header h1 {
      font-size: 2.5rem;
      color: #333;
      margin-bottom: 0.5rem;
    }

    .page-description {
      font-size: 1.25rem;
      color: #666;
    }
  </style>
</BaseLayout>
