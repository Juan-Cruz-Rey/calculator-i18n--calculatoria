---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { t, calculatorPaths } from '@/utils/i18n';

const calculators = [
  { title: t('bmi.title', 'nl'), description: t('bmi.description', 'nl'), url: calculatorPaths.bmi.nl, category: t('categories.health', 'nl'), icon: '‚öïÔ∏è' },
  { title: t('calorie.title', 'nl'), description: t('calorie.description', 'nl'), url: calculatorPaths.calorie.nl, category: t('categories.health', 'nl'), icon: 'üî•' },
  { title: t('idealWeight.title', 'nl'), description: t('idealWeight.description', 'nl'), url: calculatorPaths.idealWeight.nl, category: t('categories.health', 'nl'), icon: 'üéØ' },
  { title: t('bodyFat.title', 'nl'), description: t('bodyFat.description', 'nl'), url: calculatorPaths.bodyFat.nl, category: t('categories.health', 'nl'), icon: 'üìä' },
  { title: t('bmr.title', 'nl'), description: t('bmr.description', 'nl'), url: calculatorPaths.bmr.nl, category: t('categories.health', 'nl'), icon: '‚ö°' },
  { title: t('tdee.title', 'nl'), description: t('tdee.description', 'nl'), url: calculatorPaths.tdee.nl, category: t('categories.health', 'nl'), icon: 'üí™' },
  { title: t('age.title', 'nl'), description: t('age.description', 'nl'), url: calculatorPaths.age.nl, category: t('categories.other', 'nl'), icon: 'üéÇ' },
];
---

<BaseLayout
  title={t('site.title', 'nl')}
  description={t('site.description', 'nl')}
  lang="nl"
>
  <div class="container">
    <div class="hero">
      <h1>{t('site.title', 'nl')}</h1>
      <p class="subtitle">{t('site.description', 'nl')}</p>
    </div>

    <section class="calculators-grid">
      <h2>Aanbevolen Rekenmachines</h2>

      <div class="search-box">
        <input
          type="text"
          id="search"
          placeholder={t('common.search', 'nl')}
          autocomplete="off"
        />
      </div>

      <div class="grid" id="calculators-grid">
        {calculators.map((calc) => (
          <a href={calc.url} class="calculator-card" data-title={calc.title.toLowerCase()} data-description={calc.description.toLowerCase()}>
            <div class="calculator-icon">{calc.icon}</div>
            <h3>{calc.title}</h3>
            <p>{calc.description}</p>
            <span class="category">{calc.category}</span>
          </a>
        ))}
      </div>

      <p class="no-results" id="no-results" style="display: none;">
        {t('common.noResults', 'nl')}
      </p>
    </section>
  </div>

  <script>
    const searchInput = document.getElementById('search') as HTMLInputElement;
    const calculatorsGrid = document.getElementById('calculators-grid') as HTMLElement;
    const noResults = document.getElementById('no-results') as HTMLElement;
    const cards = Array.from(calculatorsGrid.querySelectorAll('.calculator-card'));

    searchInput?.addEventListener('input', (e) => {
      const searchTerm = (e.target as HTMLInputElement).value.toLowerCase();
      let visibleCount = 0;

      cards.forEach((card) => {
        const title = card.getAttribute('data-title') || '';
        const description = card.getAttribute('data-description') || '';
        const matches = title.includes(searchTerm) || description.includes(searchTerm);

        if (matches) {
          (card as HTMLElement).style.display = '';
          visibleCount++;
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });

      if (visibleCount === 0) {
        noResults.style.display = 'block';
      } else {
        noResults.style.display = 'none';
      }
    });
  </script>

  <style>
    .hero {
      text-align: center;
      padding: 4rem 0;
    }

    .hero h1 {
      font-size: 3rem;
      color: #333;
      margin-bottom: 1rem;
    }

    .subtitle {
      font-size: 1.25rem;
      color: #666;
    }

    .calculators-grid {
      padding: 2rem 0;
    }

    .calculators-grid h2 {
      font-size: 2rem;
      margin-bottom: 2rem;
      color: #333;
    }

    .search-box {
      margin-bottom: 2rem;
    }

    .search-box input {
      width: 100%;
      padding: 1rem;
      font-size: 1rem;
      border: 2px solid #e0e0e0;
      border-radius: 8px;
      transition: border-color 0.2s;
    }

    .search-box input:focus {
      outline: none;
      border-color: var(--primary-color);
    }

    .no-results {
      text-align: center;
      padding: 3rem;
      color: #999;
      font-size: 1.125rem;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 2rem;
    }

    .calculator-card {
      background: white;
      padding: 2rem;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      text-decoration: none;
      color: inherit;
      transition: transform 0.2s, box-shadow 0.2s;
      display: flex;
      flex-direction: column;
    }

    .calculator-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 4px 16px rgba(0,0,0,0.15);
    }

    .calculator-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
    }

    .calculator-card h3 {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
      color: #333;
    }

    .calculator-card p {
      color: #666;
      margin-bottom: 1rem;
      flex: 1;
    }

    .category {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      background: #e3f2fd;
      color: #1976d2;
      border-radius: 12px;
      font-size: 0.875rem;
      font-weight: 500;
    }

    @media (max-width: 768px) {
      .hero h1 {
        font-size: 2rem;
      }

      .grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</BaseLayout>
