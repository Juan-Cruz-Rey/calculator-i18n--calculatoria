---
import BaseLayout from '@/layouts/BaseLayout.astro';
import AgeCalculator from '@/components/calculators/AgeCalculator.astro';
import { t } from '@/utils/i18n';

const title = t('age.title', 'nl') + ' - ' + t('site.title', 'nl');
const description = t('age.metaDescription', 'nl');
---

<BaseLayout title={title} description={description} lang="nl" calculator="age">
  <div class="container">
    <div class="page-header">
      <h1>{t('age.title', 'nl')}</h1>
      <p class="page-description">{t('age.description', 'nl')}</p>
    </div>

    <AgeCalculator lang="nl" />
  </div>

  <style>
    .page-header {
      text-align: center;
      padding: 2rem 0;
    }

    .page-header h1 {
      font-size: 2.5rem;
      color: #333;
      margin-bottom: 0.5rem;
    }

    .page-description {
      font-size: 1.25rem;
      color: #666;
    }
  </style>
</BaseLayout>
