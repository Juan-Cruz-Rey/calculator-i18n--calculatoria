---
import BaseLayout from '@/layouts/BaseLayout.astro';
import TipCalculator from '@/components/calculators/TipCalculator.astro';
import { t } from '@/utils/i18n';

const title = t('tip.title', 'pt') + ' - ' + t('site.title', 'pt');
const description = t('tip.metaDescription', 'pt');
---

<BaseLayout title={title} description={description} lang="pt" calculator="tip">
  <div class="container">
    <div class="page-header">
      <h1>{t('tip.title', 'pt')}</h1>
      <p class="page-description">{t('tip.description', 'pt')}</p>
    </div>

    <TipCalculator lang="pt" />
  </div>

  <style>
    .page-header {
      text-align: center;
      padding: 2rem 0;
    }

    .page-header h1 {
      font-size: 2.5rem;
      color: #333;
      margin-bottom: 0.5rem;
    }

    .page-description {
      font-size: 1.25rem;
      color: #666;
    }
  </style>
</BaseLayout>
