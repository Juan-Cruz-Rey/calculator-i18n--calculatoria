---
import BaseLayout from '@/layouts/BaseLayout.astro';
import MacroCalculator from '@/components/calculators/MacroCalculator.astro';
import { t } from '@/utils/i18n';

const title = t('macro.title', 'pt') + ' - ' + t('site.title', 'pt');
const description = t('macro.metaDescription', 'pt');
---

<BaseLayout title={title} description={description} lang="pt">
  <div class="container">
    <div class="page-header">
      <h1>{t('macro.title', 'pt')}</h1>
      <p class="page-description">{t('macro.description', 'pt')}</p>
    </div>

    <MacroCalculator lang="pt" />
  </div>

  <style>
    .page-header {
      text-align: center;
      padding: 2rem 0;
    }

    .page-header h1 {
      font-size: 2.5rem;
      color: #333;
      margin-bottom: 0.5rem;
    }

    .page-description {
      font-size: 1.25rem;
      color: #666;
    }
  </style>
</BaseLayout>
